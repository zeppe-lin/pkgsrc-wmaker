# Description: Dockapp that changes X11 resolution
# URL:         https://www.dockapps.net/wmressel
# Depends on:  gtk3 libdockapp

name=wmressel
version=0.10
release=1
source="https://www.dockapps.net/download/$name-$version.tar.gz
	$name.desktop"

build() {
	mkdir build; cd build

	../$name-$version/configure --prefix=/usr

	make V=1
	make DESTDIR=$PKG install

	install -m 0644 -Dt $PKG/usr/share/applications $SRC/$name.desktop
}
