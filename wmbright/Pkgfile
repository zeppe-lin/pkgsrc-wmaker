# Description: Brightness control dockapp
# URL:         https://github.com/Jolmberg/wmbright
# Depends on:  scdoc xorg-libxpm xorg-libxrandr

name=wmbright
version=0.1-f5438c7
release=2
source="https://github.com/Jolmberg/$name/archive/${version#*-}/$name-$version.tar.gz
	Makefile.patch
	wmbright.1x.scdoc
	wmbright.desktop"

build() {
	cd $name-*

	patch -p0 -i $SRC/Makefile.patch

	scdoc < $SRC/wmbright.1x.scdoc > wmbright.1x

	make PREFIX=/usr MANPREFIX=/usr/share/man DESTDIR=$PKG install
	install -m 0644 -Dt $PKG/usr/share/applications $SRC/wmbright.desktop
}
