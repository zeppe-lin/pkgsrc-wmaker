# Description: Dockapp that displays current CPU usage
# URL:         https://www.dockapps.net/wmcpuload
# Depends on:  xorg-libxmu xorg-libxpm

name=wmcpuload
version=1.1.1
release=1
source="https://www.dockapps.net/download/$name-$version.tar.gz
	fix-manpage.patch
	$name.desktop"

build() {
	patch -d $name-$version -Np1 -i $SRC/fix-manpage.patch

	# build in separate dir is broken
	cd $name-$version

	./configure --prefix=/usr

	make V=1
	make DESTDIR=$PKG install

	install -m 0644 -Dt $PKG/usr/share/applications $SRC/$name.desktop
}
