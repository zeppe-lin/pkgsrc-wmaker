# Description: Dockapp calculator
# URL:         https://www.dockapps.net/wmcalc
# Depends on:  xorg-libxpm

name=wmcalc
version=0.7
release=1
source="https://www.dockapps.net/download/wmcalc-$version.tar.gz
	wmcalc-desktop.patch"

build() {
	patch -d wmcalc-$version -Np1 -i $SRC/wmcalc-desktop.patch

	mkdir build; cd build

	autoreconf -fi ../wmcalc-$version
	../wmcalc-$version/configure --prefix=/usr

	make V=1
	make DESTDIR=$PKG install
}
