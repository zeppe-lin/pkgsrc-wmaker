# Description: Dockapp that displays CPU frequency
# URL:         https://www.dockapps.net/wmcpufreq
# Depends on:  cpufrequtils libdockapp

name=wmcpufreq
version=3.1
release=1
source="https://www.dockapps.net/download/$name-$version.tar.gz
	wmcpufreq-3.0-fmax.patch
	wmcpufreq.1.pod
	wmcpufreq.desktop"

build() {
	patch -d $name-$version -p1 -i $SRC/$name-3.0-fmax.patch

	mkdir -p $PKG/usr/bin
	make -C $name-$version CFLAGS="$CFLAGS" DESTDIR=$PKG/usr install

	pod2man -c ' ' -n $name -r $version -s 1 $SRC/$name.1.pod > $name.1
	install -m 0644 -Dt $PKG/usr/share/man/man1 $name.1
	install -m 0644 -Dt $PKG/usr/share/applications $SRC/$name.desktop
}
